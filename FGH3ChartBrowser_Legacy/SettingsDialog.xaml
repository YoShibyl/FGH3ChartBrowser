<Window x:Class="FGH3ChartBrowser.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FGH3ChartBrowser"
        mc:Ignorable="d"
        Title="Chart Browser Settings" Height="360" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420*"/>
            <ColumnDefinition Width="180*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ciCombo" HorizontalAlignment="Left" Margin="125,19,0,0" VerticalAlignment="Top" Width="86" SelectionChanged="ComboBox_SelectionChanged" Height="22">
            <ComboBoxItem Content="0"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
        </ComboBox>
        <Label Content="Controller index:" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Height="26" Width="109"/>
        <TextBlock HorizontalAlignment="Left" Margin="227,10,0,0" TextWrapping="Wrap" Text="Change this if your Xinput-enabled guitar isn't the only controller connected / isn't controlling the interface." VerticalAlignment="Top" Height="60" Width="174" FontSize="10"/>
        <CheckBox x:Name="AutoScanChk" Content="Auto scan songs on startup" Margin="10,77,10,0" VerticalAlignment="Top" Unchecked="AutoScanChk_Checked" Checked="AutoScanChk_Checked" Height="15"/>
        <Label Content="Controls:" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" FontSize="21" Height="38" Width="92"/>
        <Rectangle HorizontalAlignment="Left" Height="50" Margin="10,142,0,0" VerticalAlignment="Top" Width="60">
            <Rectangle.Fill>
                <ImageBrush Stretch="Uniform" ImageSource="/GHStrumBar.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Scroll through song list" HorizontalAlignment="Left" Margin="75,152,0,0" VerticalAlignment="Top" Height="26" Width="132"/>
        <Rectangle HorizontalAlignment="Left" Height="50" Margin="10,197,0,0" VerticalAlignment="Top" Width="50">
            <Rectangle.Fill>
                <ImageBrush Stretch="Uniform" ImageSource="/GHStartButton.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Play selected song" HorizontalAlignment="Left" Margin="65,209,0,0" VerticalAlignment="Top" Height="26" Width="108"/>
        <Rectangle HorizontalAlignment="Left" Height="38" Margin="241,148,0,0" VerticalAlignment="Top" Width="25">
            <Rectangle.Fill>
                <ImageBrush Stretch="Uniform" ImageSource="/GHFretOrange.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="(Orange)" HorizontalAlignment="Left" Margin="231,128,0,0" VerticalAlignment="Top" FontSize="9" Height="22" Width="45"/>
        <Label Content="Hold to scroll more" HorizontalAlignment="Left" Margin="271,152,0,0" VerticalAlignment="Top" Height="26" Width="112"/>

        <Rectangle HorizontalAlignment="Left" Height="38" Margin="208,203,0,0" VerticalAlignment="Top" Width="25">
            <Rectangle.Fill>
                <ImageBrush Stretch="Uniform" ImageSource="/GHFretBlue.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="(Blue)" HorizontalAlignment="Left" Margin="204,184,0,0" VerticalAlignment="Top" FontSize="9" Height="22" Width="33"/>
        <Label Content="Focus on filter/search bar" HorizontalAlignment="Left" Margin="238,209,0,0" VerticalAlignment="Top" Height="26" Width="144"/>
        <Button x:Name="CancelBtn" Content="USERS CAN'T SEE THIS BUTTON" Margin="13,-81,0,0" VerticalAlignment="Top" Foreground="#FF797979" IsCancel="True" Click="CancelBtn_Click" IsTabStop="False" Grid.ColumnSpan="2" Height="20"/>

        <Label Content="This tool was made by Yoshibyl (a.k.a. &quot;Yoshi&quot;)" HorizontalAlignment="Left" Margin="10,0,0,42" VerticalAlignment="Bottom" FontSize="11" Height="25" Width="231"/>
        <Label x:Name="Watermark" Content="https://github.com/YoShibyl/FGH3ChartBrowser" HorizontalAlignment="Left" Margin="10,0,0,17" VerticalAlignment="Bottom" Foreground="#FF1899FF" Height="26" Width="263"/>
        <Button x:Name="WatermarkBtn" Content="Button" Margin="10,0,0,13" VerticalAlignment="Bottom" Height="30" Foreground="{x:Null}" Click="WatermarkBtn_Click" Opacity="0" HorizontalAlignment="Left" Width="266" Cursor="Hand"/>
        <Label Content="Set game resolution:" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Grid.Column="1" FontSize="14"/>
        <Label Content="Width:" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="gameWinWidthTxt" Grid.Column="1" HorizontalAlignment="Left" Margin="73,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" MaxLines="1" MaxLength="4" PreviewTextInput="NumberValidationTextBox" DataObject.Pasting="WidthHeight_Pasting" FontSize="18"/>
        <TextBox x:Name="gameWinHeightTxt" Grid.Column="1" HorizontalAlignment="Left" Margin="73,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" MaxLines="1" MaxLength="4" PreviewTextInput="NumberValidationTextBox" DataObject.Pasting="WidthHeight_Pasting" FontSize="18"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="saveResolutionBtn" Grid.Column="1" Content="Save to Config" Margin="10,155,20,0" VerticalAlignment="Top" FontSize="14" Click="saveResolutionBtn_Click"/>
        <ComboBox x:Name="resComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="resComboBox_SelectionChanged" FontSize="11">
            <ComboBoxItem Content="800x600"/>
            <ComboBoxItem Content="960x600"/>
            <ComboBoxItem Content="1024x768"/>
            <ComboBoxItem Content="1280x720"/>
            <ComboBoxItem Content="1280x800"/>
            <ComboBoxItem Content="1366x768"/>
            <ComboBoxItem Content="1600x900"/>
            <ComboBoxItem Content="1600x1000"/>
            <ComboBoxItem Content="1920x1080"/>
            <ComboBoxItem Content="1920x1200"/>
            <ComboBoxItem Content="2560x1440"/>
            <ComboBoxItem Content="3840x2160"/>
        </ComboBox>


    </Grid>
</Window>
